<% (@users+@groups).each do |user| %>
  $("#issue_watcher_user_ids_<%= user.id %>").remove();
  $("#issue_watcher_group_ids_<%= user.id %>").remove();
<% end %>
$('#watchers_inputs').append('<%= escape_javascript(watchers_checkboxes(nil, (@users), true)) %>');
$('#group_watchers_inputs').append('<%= escape_javascript(watchers_checkboxes(nil, (@groups), true)) %>');
